<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/demo_toast"
    >
    
    <include layout="@layout/return_layout"/>
    
    <Button
            android:id="@+id/demo_toast_default_short"
            android:text="DEFAULT SHORT" 
            android:layout_marginTop="10dp"
            style="@style/button_style"
            />
    
    <Button
            android:id="@+id/demo_toast_default_long"
            android:text="DEFAULT LONG" 
            android:layout_marginTop="10dp"
            style="@style/button_style"
            />
    
     <Button
            android:id="@+id/demo_toast_center"
            android:text="DEFAULT CENTER" 
            android:layout_marginTop="10dp"
            style="@style/button_style"
            />

</LinearLayout>
