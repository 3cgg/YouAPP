<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"  
    android:orientation="vertical"  
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/module_tab"
    >  
    
    <LinearLayout
        style="@style/tab_style"
        android:id="@+id/module_tab_tab"  
        android:orientation="horizontal"  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"    
         >
         
        <include layout="@layout/module_tab_item_record"/>
        <include layout="@layout/module_tab_item_search"/>
        <include layout="@layout/module_tab_item_trend"/>
        <include layout="@layout/module_tab_item_more"/>
       
    </LinearLayout>
    
    
    <FrameLayout  
        android:id="@+id/module_tab_content"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  
        android:layout_weight="1" 
        />  
        
    
</LinearLayout>  
