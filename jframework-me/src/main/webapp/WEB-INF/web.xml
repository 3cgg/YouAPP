<?xml version="1.0" encoding="UTF-8"?>
<web-app id="youapp"  version="3.0"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">


	<context-param>  
        <param-name>contextConfigLocation</param-name>  
        <param-value>classpath:spring-context.xml
        </param-value>  
    </context-param> 

	<listener>  
	 <listener-class>org.springframework.web.context.ContextLoaderListener
	 </listener-class>
	 </listener>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>JWebDefaultFilter</filter-name>
		<filter-class>j.jave.framework.components.views.web.JWebDefaultFilter</filter-class>
		<init-param>
			<param-name>serviceServletPath</param-name>
			<param-value>/web/service/dispatch/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>JWebDefaultFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
		<filter-name>JWebLoginFilter</filter-name>
		<filter-class>j.jave.framework.components.views.web.JWebLoginFilter</filter-class>
		<init-param>
			<param-name>serviceServletPath</param-name>
			<param-value>/web/service/dispatch/*</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>JWebLoginFilter</filter-name>
		<url-pattern>/web/service/dispatch/*</url-pattern>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>REQUEST</dispatcher>
	</filter-mapping>
	
	
	<servlet>
		<servlet-name>JWebServiceServlet</servlet-name>
		<servlet-class>j.jave.framework.components.views.web.JWebServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JWebServiceServlet</servlet-name>
		<url-pattern>/web/service/dispatch/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>JMobileServiceServlet</servlet-name>
		<servlet-class>j.jave.framework.components.views.mobile.JMobileServiceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>JMobileServiceServlet</servlet-name>
		<url-pattern>/mobile/service/dispatch/*</url-pattern>
	</servlet-mapping>
	
	
	
	<jsp-config>
		<taglib>
			<taglib-uri>http://github.com/jinwanmei/YouAPP</taglib-uri>
			<taglib-location>/WEB-INF/tld/AccessTag.tld</taglib-location>
		</taglib>
	
	</jsp-config>
	
	
	
	
	
	
	
	
	
	
</web-app>