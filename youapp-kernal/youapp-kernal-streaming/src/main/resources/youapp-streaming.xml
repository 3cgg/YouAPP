<?xml version="1.0"?>
<configuration>

<!-- xmldb properties  -->

<property>
  <name>youapp.streaming.zookeeper.server</name>
  <value>nim1.storm.com:2182,nim2.storm.com</value>
  <description>zookeeper server/nim1.storm.com:2182,nim2.storm.com</description>
</property>

<property>
  <name>youapp.streaming.zookeeper.namespace</name>
  <value>z-test</value>
  <description>zookeeper namespace</description>
</property>

<property>
  <name>youapp.streaming.node.id</name>
  <value>1</value>
  <description>node id</description>
</property>

<property>
  <name>youapp.streaming.node.name</name>
  <value></value>
  <description>node name</description>
</property>

<property>
  <name>youapp.streaming.workflow.tracking.kafka.topic</name>
  <value>wit</value>
  <description>kafka</description>
</property>


<property>
  <name>youapp.streaming.leader.netty.server.port</name>
  <value>8080</value>
  <description>leader always listener on the port</description>
</property>


<property>
  <name>youapp.streaming.leader.zookeeper.thread.count</name>
  <value>10</value>
  <description>leader node zookeeper thread count</description>
</property>

<property>
  <name>youapp.streaming.leader.logging.thread.count</name>
  <value>3</value>
  <description>leader node logging thread count</description>
</property>


<property>
  <name>youapp.streaming.leader.rpc.host.znode</name>
  <value>/leader-host</value>
  <description>zookeeper node from which the remote host can be found</description>
</property>

<property>
  <name>youapp.streaming.leader.taskrepo.znode</name>
  <value>/tasks</value>
  <description>zookeeper node for task</description>
</property>

</configuration>
